{
  "compilerOptions": {
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "@testing-library/svelte"
    ],
    "allowJs": true,
    "strictFunctionTypes": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "target": "es6",
    "module": "esnext",
    "strict": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@/*": ["./src/*", "./*", "src/*"]
    },
    "lib": [
      "esnext",
      "dom.iterable",
      "scripthost",
      "es2015",
      "es2016",
      "dom",
      "es2018.promise"
    ]
  },
  "paths": {
    "@/*": ["./src/*", "./*", "src/*"]
  },
  "include": [
    "./src",
    "**.svelte",
    "./src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.svelte",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/locale/*"
  ],
  "exclude": ["node_modules"],
  "trailing-comma": [
    true,
    {
      "singleline": "never",
      "multiline": {
        "objects": "never",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      }
    }
  ],
  "no-var-requires": false
}
